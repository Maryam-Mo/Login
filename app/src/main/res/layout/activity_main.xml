<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maryam.log_in.item.presenter.MainActivity">

    <Button
        android:id="@+id/itemBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="194dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="@color/colorPrimary"
        android:text="Item"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userBtn" />

    <Button
        android:id="@+id/userBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="142dp"
        android:background="@color/colorPrimary"
        android:text="User"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/itemBtn"
        app:layout_constraintEnd_toEndOf="@+id/itemBtn"
        app:layout_constraintStart_toStartOf="@+id/itemBtn"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
