<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maryam.log_in">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".resource.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.view.ProfileActivity"
            android:label="My Profile"
            android:parentActivityName=".user.view.ViewUsersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".user.view.ViewUsersActivity" />

            <intent-filter>
                <action android:name="com.example.maryam.log_in.ProfileActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.view.ViewUsersActivity"
            android:label="View Users"
            android:parentActivityName=".item.view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".item.view.MainActivity" />

            <intent-filter>
                <action android:name="com.example.maryam.log_in.ViewUsersActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".item.view.MainActivity"
            android:label="Main"
            android:parentActivityName=".login.view.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.view.LoginActivity" />

            <intent-filter>
                <action android:name="com.example.maryam.log_in.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".item.view.ViewItemsActivity"
            android:label="View Items"
            android:parentActivityName=".item.view.ItemMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".item.view.ItemMainActivity" />
            <intent-filter>
                <action android:name="com.example.maryam.log_in.ViewItemsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".item.view.ListviewItemRowActivity" />
        <activity
            android:name=".item.view.ItemMainActivity"
            android:label="Item"
            android:parentActivityName=".item.view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".item.view.MainActivity" />
            <intent-filter>
                <action android:name="com.example.maryam.log_in.ItemMainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".item.view.ItemProfileActivity"
            android:label="Manage An Activity"
            android:parentActivityName=".user.view.ViewUsersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".user.view.ViewUsersActivity" />
            <intent-filter>
                <action android:name="com.example.maryam.log_in.ItemProfileActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>